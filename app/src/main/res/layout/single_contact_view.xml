<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/single_contact_view"
    android:background="?android:windowBackground"
    android:weightSum="1">

    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
        >
        <ImageButton
            android:id="@+id/ib_call_icon"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_marginRight="5dp"
            android:background="#0000"
            android:src="@mipmap/ic_jog_dial_answer" />

        <ImageButton
            android:id="@+id/ib_sms_icon"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_marginRight="5dp"
            android:src="@mipmap/ic_sms_image"
            android:background="#0000" />

        <ImageButton
            android:id="@+id/ib_whatsapp_icon"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_marginRight="10dp"
            android:background="#0000"
            android:src="@mipmap/ic_whatsapp" />


        <TextView
            android:id="@+id/tv_contact_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:text="temp"
            android:textStyle="bold"
            android:textSize="20dp">
        </TextView>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@android:color/darker_gray"/>


</RelativeLayout>
