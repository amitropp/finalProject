<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/single_contact_view"
    android:background="?android:windowBackground"
    android:weightSum="1">


    <ImageButton
        android:id="@+id/ib_call_icon"
        android:layout_width="34dp"
        android:layout_height="38dp"
        android:layout_marginRight="5dp"
        android:visibility="invisible"
        android:background="#0000"
        android:src="@mipmap/ic_jog_dial_answer" />

    <ImageButton
        android:id="@+id/ib_sms_icon"
        android:layout_width="35dp"
        android:layout_height="37dp"
        android:layout_marginRight="5dp"
        android:src="@mipmap/ic_sms_image"
        android:visibility="invisible"
        android:background="#0000" />

    <ImageButton
        android:id="@+id/ib_whatsapp_icon"
        android:layout_width="37dp"
        android:layout_height="38dp"
        android:layout_marginRight="10dp"
        android:visibility="invisible"
        android:background="#0000"
        android:src="@mipmap/ic_whatsapp" />


    <TextView
        android:id="@+id/tv_contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp">
    </TextView>


</LinearLayout>
